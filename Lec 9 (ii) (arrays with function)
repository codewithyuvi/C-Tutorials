#include <iostream>
using namespace std ;

//HOLD
void printArray(int arr[], int size ){
    
    
    //print the array
    cout << "Printing tje array " << endl ; 
    for(int i = 0 ; i < size ; i++){
        cout << arr[i] << " ";    
    }
    
    cout << "Printing done" ;
    
    
}

int main()
{
    
    //declare
    int number[15];
    cout << "value at 1 indx " << number[20] << endl ;
    
    
    //initialising an std::array<
    int second[3] = {5,7,11};
    
    //accessing an element
    cout << "value at 2 index " << second[2] << endl ;
    
    
    int third[15] = {2,7} ; 
    int n = 15;
    printArray(third, 15);
    
    cout << endl ; 
    
    int fourth[10] = {0};
    printArray(fourth, 10);
    
    
    
      cout << endl ; 
    
    int fifth[10] = {1};
    printArray(fifth, 10);
    
    
    
}
